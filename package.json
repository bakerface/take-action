{
  "name": "take-action",
  "version": "2.0.0",
  "description": "Predictable micro-service architecture",
  "author": "Chris Baker <mail.chris.baker@gmail.com>",
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "contributors": [
    {
      "name": "Chris Baker",
      "email": "mail.chris.baker@gmail.com"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.3",
    "mocha": "^3.0.2",
    "nyc": "^8.3.0",
    "xo": "^0.16.0"
  },
  "engines": {
    "node": "^6.6.0",
    "npm": "^3.10.3"
  },
  "nyc": {
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bakerface/take-action.git"
  },
  "scripts": {
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "test": "xo && nyc --check-coverage _mocha"
  },
  "xo": {
    "envs": [
      "mocha",
      "node"
    ],
    "space": 2,
    "rules": {
      "babel/array-bracket-spacing": [
        "error",
        "always"
      ],
      "babel/object-curly-spacing": [
        "error",
        "always"
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ]
    }
  }
}
